{
  "name": "dumont-machine-switcher",
  "displayName": "Dumont Machine Switcher",
  "description": "Switch between GPU machines in Dumont Cloud",
  "version": "1.1.0",
  "publisher": "dumont-cloud",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dumont.switchMachine",
        "title": "Switch Machine",
        "category": "Dumont",
        "icon": "$(server)"
      },
      {
        "command": "dumont.refreshMachines",
        "title": "Refresh Machines",
        "category": "Dumont",
        "icon": "$(refresh)"
      },
      {
        "command": "dumont.openPanel",
        "title": "Open Machine Panel",
        "category": "Dumont",
        "icon": "$(server-environment)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "dumont.switchMachine",
          "group": "navigation@1",
          "when": "true"
        }
      ],
      "commandPalette": [
        {
          "command": "dumont.switchMachine",
          "when": "true"
        },
        {
          "command": "dumont.refreshMachines",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dumont-machines",
          "title": "Dumont Cloud",
          "icon": "$(server-environment)"
        }
      ]
    },
    "views": {
      "dumont-machines": [
        {
          "id": "dumont.machinesList",
          "name": "GPU Machines",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Dumont Machine Switcher",
      "properties": {
        "dumont.apiUrl": {
          "type": "string",
          "default": "",
          "description": "Dumont Cloud API URL"
        },
        "dumont.authToken": {
          "type": "string",
          "default": "",
          "description": "Authentication token for Dumont Cloud API"
        },
        "dumont.currentMachineId": {
          "type": "string",
          "default": "",
          "description": "Current machine ID"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.9"
  }
}
