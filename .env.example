# ===========================================
# Dumont Cloud - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=postgresql://dumont:dumont123@localhost:5432/dumont_cloud
DB_USER=dumont
DB_PASSWORD=dumont123
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dumont_cloud

# Redis
REDIS_URL=redis://localhost:6379/0

# App Config
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=true
DEMO_MODE=false

# ===========================================
# API Keys
# ===========================================

# Vast.ai - GPU provisioning
# Get from: https://cloud.vast.ai/account
VAST_API_KEY=your_vast_api_key_here

# HuggingFace - Model access (optional)
HUGGINGFACE_TOKEN=hf_xxx

# ===========================================
# Backblaze B2 - Snapshot Storage
# ===========================================
B2_KEY_ID=your_b2_key_id
B2_APPLICATION_KEY=your_b2_application_key
B2_ENDPOINT=https://s3.us-west-004.backblazeb2.com
B2_BUCKET=your-bucket-name

# ===========================================
# Email Service (Resend) - Weekly Reports
# ===========================================
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM_ADDRESS=reports@dumontcloud.com
EMAIL_FROM_NAME=DumontCloud

# Email Scheduling
EMAIL_SEND_HOUR=8
EMAIL_SEND_DAY=0
EMAIL_TIMEZONE=UTC

# Unsubscribe Security
# Generate with: openssl rand -hex 32
UNSUBSCRIBE_SECRET_KEY=your_secret_key_here

# Feature Flags
ENABLE_EMAIL_REPORTS=true
