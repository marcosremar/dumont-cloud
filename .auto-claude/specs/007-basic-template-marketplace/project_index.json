{
  "project_type": "monorepo",
  "services": {
    "backend": {
      "path": ".",
      "tech_stack": ["python", "flask", "fastapi"],
      "port": 8000,
      "dev_command": "python app.py",
      "test_command": "pytest tests/",
      "database": "postgresql",
      "cache": "redis"
    },
    "web": {
      "path": "./web",
      "tech_stack": ["react", "vite", "redux-toolkit", "tailwind", "radix-ui"],
      "port": 8000,
      "dev_command": "npm run dev",
      "test_command": "npx playwright test"
    }
  },
  "infrastructure": {
    "docker": true,
    "docker_compose": "docker-compose.yml",
    "database": "postgresql",
    "cache": "redis"
  },
  "conventions": {
    "backend_models": "dataclasses in src/modules/*/models.py",
    "backend_routes": "Flask blueprints in src/api/*.py",
    "backend_services": "Service classes in services/*.py",
    "frontend_state": "Redux Toolkit slices with createAsyncThunk",
    "frontend_components": "Radix UI + Tailwind CSS",
    "api_pattern": "Flask blueprints + async Redux thunks"
  }
}
