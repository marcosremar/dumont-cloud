# ===========================================
# Dumont Cloud Tests - Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# AI Testing (Midscene.js)
# ===========================================
# Required for AI-powered testing with Midscene.js
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Test Configuration
# ===========================================
# Base URL for tests (defaults to Vite dev server)
BASE_URL=http://localhost:5173

# ===========================================
# Authentication
# ===========================================
# Test user credentials (optional, has defaults)
TEST_USER_EMAIL=your_test_email@example.com
TEST_USER_PASSWORD=your_test_password

# Set to "true" to skip real authentication in tests
USE_DEMO_MODE=false
